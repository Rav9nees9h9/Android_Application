<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:text="Add Vehicle"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="25dp" />

    <EditText
        android:id="@+id/make_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Make"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/model_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Model"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="142dp" />

    <EditText
        android:id="@+id/condition_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Condition"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="195dp" />

    <EditText
        android:id="@+id/engine_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Engine Cylinder"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="253dp" />

    <EditText
        android:id="@+id/year_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Year"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="310dp" />

    <EditText
        android:id="@+id/doors_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Number of Rooms"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="365dp" />

    <EditText
        android:id="@+id/price_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Price"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="412dp" />

    <EditText
        android:id="@+id/color_id"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Color"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="467dp" />

    <Button
        android:id="@+id/add_id"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:text="ADD"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="665dp" />

    <Button
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="549dp" />

    <Button
        android:id="@+id/add_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thumbnail"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="549dp" />

</androidx.constraintlayout.widget.ConstraintLayout>