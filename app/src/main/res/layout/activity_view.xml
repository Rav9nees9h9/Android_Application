<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="303dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="84dp"
        android:text="Vehicles"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textColorLink="@color/purple_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:text="CREATE"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="110dp" />

    <ListView
        android:id="@+id/vehicle_details"
        android:layout_width="455dp"
        android:layout_height="477dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELOAD"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="727dp" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="727dp" />

    <Button
        android:id="@+id/Available_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showAvailableVehicles"
        android:text="Available"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/sold_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showSoldVehicle"
        android:text="Sold"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="146dp" />

</androidx.constraintlayout.widget.ConstraintLayout>